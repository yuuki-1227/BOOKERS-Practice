<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>

<%= f.label :title %><br>
<%= f.text_field :title %><br>

<%= f.label :body %><br>
<%= f.text_area :body %><br>

<%= f.submit 'Update Book' %>

<% end %>

<%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %>